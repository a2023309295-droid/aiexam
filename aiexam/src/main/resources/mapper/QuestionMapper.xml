<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.aiexam.mapper.QuestionMapper">
    <select id="selectCategoryQuestionCount" resultType="java.util.Map">
       select category_id as categoryId, count(*) as count from questions where is_deleted = 0 group by category_id
    </select>
</mapper>